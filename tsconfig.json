{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2015",
        "baseUrl": "src",
        "paths": {
            "@components/*": ["components/*"],
            "@services/*": ["services/*"],
            "@styles/*": ["styles/*"],
            "@components/shared/*": ["components/shared/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
